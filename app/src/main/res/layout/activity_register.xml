<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.geojit.libin.travelmate.RegisterActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <com.geojit.libin.travelmate.components.TMEditText
            android:id="@+id/editTextName"
            style="@style/RegisterEditText"
            android:hint="@string/name"
            android:inputType="textPersonName" />

        <com.geojit.libin.travelmate.components.TMEditText
            android:id="@+id/editTextEmail"
            style="@style/RegisterEditText"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />

        <com.geojit.libin.travelmate.components.TMEditText
            android:id="@+id/editTextPhone"
            style="@style/RegisterEditText"
            android:hint="@string/phone"
            android:inputType="phone" />

        <com.geojit.libin.travelmate.components.TMButton
            android:id="@+id/buttonNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:theme="@style/ButtonEditProfile" />
    </LinearLayout>

</LinearLayout>
